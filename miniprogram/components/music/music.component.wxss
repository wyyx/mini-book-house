.container {
  position: relative;
}

.cover-container {
  width: 100%;
  display: flex;
  justify-content: center;
}
.cover {
  width: 240px;
  height: 240px;
  border-radius: 50%;
}

.player-container {
  top: 0rpx;
  position: absolute;
  width: 100%;
  height: 240px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.player {
  width: 100px;
  height: 100px;
  position: absolute;
}

.tag {
  width: 50rpx;
  position: relative;
  margin-top: -70rpx;
  padding-left: 40rpx;
}

.content-container {
  display: flex;
  justify-content: center;
  padding-top: 50rpx;
}

.content {
  width: 80%;
}
