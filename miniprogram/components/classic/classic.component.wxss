.header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.like-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: baseline;
  margin-right: 10rpx;
  position: relative;
}

like-cmp {
  padding-right: 15rpx;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

movie-cmp,
music-cmp,
essay-cmp {
  width: 100%;
}

navi-cmp {
  position: absolute;
  bottom: 64rpx;
}

.share {
  width: 40rpx;
  height: 40rpx;
}

.share-btn {
  position: relative;
  top: 5rpx;
}
